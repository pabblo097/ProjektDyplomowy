@model CategoryViewModel
@{
    ViewData["Title"] = "Edytowanie kategorii";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form asp-controller="Categories" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group my-3">
        <div class="form-floating">
            <input class="form-control" placeholder="Name" id="floatingTextareaName" asp-for="Name" />
            <label for="floatingTextareaName" asp-for="Name"></label>
        </div>
        <span asp-validation-for="Name" class="text-danger"></span>
        <span class="text-danger mb-3">@Html.ValidationMessage("NameTaken")</span>
    </div>


    <div class="form-group">
        <button type="submit" class="btn btn-primary py-2 px-4">
            <span class="mr-3"><i class="fas fa-edit"></i></span>
            Edytuj
        </button>
    </div>
</form>
