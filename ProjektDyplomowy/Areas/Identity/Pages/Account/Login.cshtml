@page
@model LoginModel

@{
    ViewData["Title"] = "Logowanie";
}

<div class="row">
    <h1 class="col-lg-6 offset-lg-3">@ViewData["Title"]</h1>
    <div class="col-lg-6 offset-lg-3">
        <section>
            <form id="account" method="post">
                <h2>Użyj konta lokalnego do zalogowania się.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group my-3">
                    <div class="form-floating">
                        <input class="form-control" placeholder="Username" id="floatingTextareaUsername" asp-for="Input.Username" />
                        <label for="floatingTextareaUsername" asp-for="Input.Username"></label>
                    </div>
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>

                <div class="form-group my-3">
                    <div class="form-floating">
                        <input class="form-control" placeholder="Password" id="floatingTextareaPassword" asp-for="Input.Password" />
                        <label for="floatingTextareaPassword" asp-for="Input.Password"></label>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox my-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mb-3">Zaloguj się</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Nie pamiętasz hasła?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Zarejestruj się jako nowy użytkownik.</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Wyślij email potwierdzający ponownie.</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
