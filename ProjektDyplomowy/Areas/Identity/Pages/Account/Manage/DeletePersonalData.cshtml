@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Usuń dane osobowe";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="alert alert-danger" role="alert">
    <p>
        <strong>Usunięcie danych spowoduję także usunięcie konta. Ta operacja jest nieodwracalna.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        @if (Model.RequirePassword)
        {
            <div class="form-group my-3">
                <div class="form-floating">
                    <input class="form-control" placeholder="Password" id="floatingTextareaPassword" asp-for="Input.Password" />
                    <label for="floatingTextareaPassword" asp-for="Input.Password"></label>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
        }
        <div class="form-group">
            <button id="delete-user" type="submit" class="btn btn-danger py-2 px-4">
                <span class="mr-3"><i class="far fa-trash-alt"></i></span>
                Usuń
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
