@page
@model EmailModel
@{
    ViewData["Title"] = "Zarządzaj adresem email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<form id="email-form" method="post">
    <div class="form-group">
        @if (Model.IsEmailConfirmed)
        {
            <div class="form-floating">
                <input class="form-control" placeholder="Email" id="floatingTextareaEmail" asp-for="Email" disabled />
                <label for="floatingTextareaEmail" asp-for="Email"></label>
            </div>
        }
        else
        {
            <div class="form-floating">
                <input class="form-control" placeholder="Email" id="floatingTextareaEmail" asp-for="Email" disabled />
                <label for="floatingTextareaEmail" asp-for="Email"></label>
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>

            <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Wyślij email weryfikacyjny</button>
        }
    </div>
    <div class="form-group my-3">
        <div class="form-floating">
            <input class="form-control" placeholder="NewEmail" id="floatingTextareaNewEmail" asp-for="Input.NewEmail" />
            <label for="floatingTextareaNewEmail" asp-for="Input.NewEmail"></label>
        </div>
        <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn btn-primary py-2 px-4">
            <span class="mr-3"><i class="far fa-save"></i></span>
            Zmień email
        </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
